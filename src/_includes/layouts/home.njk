---
layout: layouts/base.njk
extraJs: /scripts/pages/home.js
bodyClass: page-home
---
{% if hero %}
<section class="hero hero--home">
  <div class="hero__inner">
    <h1 class="hero__title">{{ hero.title }}</h1>
    <p class="hero__subtitle">{{ hero.subtitle }}</p>
    <a href="#main-content" class="btn btn--primary btn--lg">{{ hero.cta }}</a>
  </div>
</section>
{% endif %}

<main id="main-content" class="page-shell page-shell--home">
  <div class="container">
    {{ content | safe }}
  </div>
</main>
