{% if breadcrumbs %}
<nav class="breadcrumbs" aria-label="Breadcrumb">
  {% for crumb in breadcrumbs %}
    {% if crumb.url %}
      <a href="{{ crumb.url }}">{{ crumb.label }}</a>
    {% else %}
      <span>{{ crumb.label }}</span>
    {% endif %}
    {% if not loop.last %}
      <span class="breadcrumbs__sep">/</span>
    {% endif %}
  {% endfor %}
</nav>
{% endif %}
