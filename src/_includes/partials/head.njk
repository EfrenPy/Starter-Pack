<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<meta http-equiv="Content-Security-Policy" content="{{ site.csp | safe }}">
{% if description %}
<meta name="description" content="{{ description }}">
{% endif %}
<meta name="robots" content="{% if noindex %}noindex,follow{% else %}index,follow,max-snippet:-1,max-image-preview:large,max-video-preview:-1{% endif %}">
{% if og %}
<meta property="og:title" content="{{ og.title or title }}">
<meta property="og:description" content="{{ og.description or description }}">
{% else %}
<meta property="og:title" content="{{ title }}">
<meta property="og:description" content="{{ description }}">
{% endif %}
<meta property="og:type" content="{% if bodyClass == 'page-content' %}article{% else %}website{% endif %}">
<meta property="og:url" content="{{ page.url | absoluteUrl(site.url) }}">
<meta property="og:locale" content="{{ locale }}">
{% set langOg = site.ogImage %}
{% if site.ogImageByLang and lang and site.ogImageByLang[lang] %}
{% set langOg = site.ogImageByLang[lang] %}
{% endif %}
<meta property="og:image" content="{{ site.url }}{{ langOg }}">
<meta property="og:image:width" content="{{ site.ogImageWidth }}">
<meta property="og:image:height" content="{{ site.ogImageHeight }}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:image" content="{{ site.url }}{{ langOg }}">
<meta name="twitter:title" content="{{ og.title or title }}">
<meta name="twitter:description" content="{{ og.description or description }}">
<link rel="canonical" href="{{ page.url | absoluteUrl(site.url) }}">
{% for l in site.languages %}
<link rel="alternate" hreflang="{{ l.code }}" href="{{ page.url | toLang(lang, l.code) | absoluteUrl(site.url) }}">
{% endfor %}
<link rel="alternate" hreflang="x-default" href="{{ page.url | toLang(lang, 'en') | absoluteUrl(site.url) }}">
<link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
<link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
<link rel="manifest" href="/site.webmanifest">
<title>{{ title }}{% if site.name not in title %} - {{ site.name }}{% endif %}</title>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,400;9..40,500;9..40,600;9..40,700&family=Instrument+Serif&display=swap" rel="stylesheet">
<link rel="preload" href="/css/styles.css" as="style">
<link rel="stylesheet" href="/css/styles.css">
<script>{{ site.themeScript | safe }}</script>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "name": "{{ site.name }}",
      "url": "{{ site.url }}",
      "email": "{{ site.email }}"{% if site.sameAs and site.sameAs.length %},
      "sameAs": [
        {% for profile in site.sameAs %}
        "{{ profile }}"{% if not loop.last %},{% endif %}
        {% endfor %}
      ]{% endif %}
    },
    {
      "@type": "WebSite",
      "name": "{{ site.name }}",
      "url": "{{ site.url }}",
      "inLanguage": "{{ lang or site.defaultLang }}",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "{{ site.url }}/{{ lang or site.defaultLang }}/search/?query={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
  ]
}
</script>
{% block schema %}{% endblock %}
