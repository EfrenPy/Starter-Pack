{
  "name": "starter-pack",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Bilingual informational website for people starting to work at CERN",
  "scripts": {
    "dev": "npx @11ty/eleventy --serve",
    "build": "npx @11ty/eleventy",
    "preview": "npx @11ty/eleventy --serve --port 4173",
    "lint": "eslint src/scripts",
    "format": "prettier --write \"src/**/*.{js,css,html,njk,md}\"",
    "test": "npx playwright test",
    "test:prod": "npx playwright test --config playwright.prod.config.js",
    "test:all": "npx playwright test && npx playwright test --config playwright.prod.config.js",
    "test:headed": "npx playwright test --headed"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "basic-ftp": "^5.1.0",
    "eslint": "^9.0.0",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "markdown-it": "^14.1.0",
    "markdown-it-attrs": "^4.3.1",
    "prettier": "^3.3.0"
  },
  "dependencies": {
    "fuse.js": "^7.1.0"
  }
}
